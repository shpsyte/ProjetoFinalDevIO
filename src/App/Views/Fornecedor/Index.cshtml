@model IEnumerable<App.ViewModels.FornecedorViewModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Listagem de Fornecedor</h1>
 
<vc:Summary></vc:Summary>
<p>
    <a class="btn btn-info" disable-by-claim-name="fornecedor" disable-by-claim-value="add"  asp-action="Create">Create New</a>
</p>
<table class="table table-hover">
    <thead class="thead-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LastName)
            </th>
            <th>
               Documento
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                  @(this.FormataDoc(1,item.Document))
              
            </td>
            <td class="text-right">
                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info"><i class="fa fa-search"></i></a> 
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning"><i class="fa fa-pencil-alt"></i></a> 
                <a asp-action="Delete" 
                disable-by-claim-name="fornecedor" disable-by-claim-value="del" 
                asp-route-id="@item.Id" class="btn btn-danger"><i class="fa fa-trash"></i></a>
            </td>
        </tr>
}
    </tbody>
</table>
